{
    "name": "retro-blog-server",
    "module": "index.ts",
    "private": true,
    "scripts": {
        "dev": "rm -rf package-lock.json && bun install && bun --watch src/server.ts",
        "build": "rm -rf bun.lock && npm install && rm -rf dist && tsc",
        "start": "node dist/src/server.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/bun": "latest",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/eslint": "^9.6.1",
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.16.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.7.4",
        "prisma": "^7.2.0",
        "typescript-eslint": "^8.50.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "better-auth": "^1.4.9",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "pg": "^8.16.3",
        "tsx": "^4.21.0"
    }
}
